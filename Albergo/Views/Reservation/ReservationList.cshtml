@model IEnumerable<Albergo.Models.Prenotazioni>
@{
    ViewBag.Title = "ReservationList";
}

<h2>Lista prenotazioni</h2>

<table class="table table-hover table-bordered container text-center">
    <tr>
        <th>Cliente</th>
        <th>Codice Fiscale</th>
        <th>N° Camera</th>
        <th>Periodo</th>
        <th>Caparra</th>
        <th>Tariffa</th>
        <th>Servizi</th>
        <th>Gestione</th>
        <th>Check Out</th>
    </tr>
    @foreach (Albergo.Models.Prenotazioni p in Model)
    {
        <tr>
            <td>@p.cliente.Cognome @p.cliente.Nome</td>
            <td>@p.cliente.CodiceFiscale</td>
            <td>@p.camera.Numero</td>
            <td>@p.PeriodoDal.ToShortDateString() - @p.PeriodoAl.ToShortDateString() </td>
            <td>@p.Caparra.ToString("C2")</td>
            <td>@p.Tariffa.ToString("C2")</td>
            <td>
                @Html.ActionLink("➕", "AddService", "ServiziAggiunti", new { id = p.IdPrenotazione }, new { @class = "btn btn-success" })
                @Html.ActionLink("🔍", "ShowService", "ServiziAggiunti", new { id = p.IdPrenotazione }, new { @class = "btn btn-info" })
            </td>
            <td>
                @Html.ActionLink("✒", "ModificaPrenotazione", "Reservation", new { id = p.IdPrenotazione }, new { @class = "btn btn-warning" })
                @Html.ActionLink("🗑", "EliminaPrenotazione", "Reservation", new { id = p.IdPrenotazione }, new { @class = "btn btn-danger" })
            </td>            <td>
                @Html.ActionLink("CheckOUT", "CheckOut", "Reservation", new { id = p.IdPrenotazione }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>