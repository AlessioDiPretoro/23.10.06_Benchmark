@model IEnumerable<Albergo.Models.Servizi>
@{
    ViewBag.Title = "ShowService";
}

<h2>Lista servizi</h2>

<table class="table table-hover table-bordered container text-center">
    <tr>
        <th>Descrizione</th>
        <th>Prezzo</th>
        <th>Data</th>
        <th>Quantita</th>
        <th>Gestione</th>
    </tr>
    @foreach (Albergo.Models.Servizi p in Model)
    {
        <tr>
            <td>@p.Descrizione</td>
            <td>@p.Prezzo.ToString("C2")</td>
            <td>@p.Data.ToShortDateString()</td>
            <td>@p.Data</td>
            <td>
                @Html.ActionLink("✒", "EditService", "ServiziAggiunti", new { id = p.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("🗑", "DeleteService", "ServiziAggiunti", new { id = p.Id}, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>